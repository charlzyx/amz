{
  "manifest_version": 3,
  "name": "AMZ Chat",
  "version": "1.0.0",
  "description": "Chrome sidebar chat with @lobechat/ui",
  "permissions": [
    "sidePanel",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_title": "Open AMZ Chat"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ],
  "icons": {
    "16": "public/icon.svg",
    "48": "public/icon.svg",
    "128": "public/icon.svg"
  }
}
